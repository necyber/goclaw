# Goclaw Environment Variables Configuration
# Copy this file to .env and modify as needed

# ========================================
# Application Configuration
# ========================================
GOCLAW_APP_NAME=goclaw
GOCLAW_APP_VERSION=0.1.0
GOCLAW_APP_ENVIRONMENT=development

# ========================================
# Server Configuration
# ========================================
GOCLAW_SERVER_HOST=0.0.0.0
GOCLAW_SERVER_PORT=8080

# ========================================
# gRPC Configuration
# ========================================
GOCLAW_SERVER_GRPC_ENABLED=true
GOCLAW_SERVER_GRPC_PORT=9090
GOCLAW_SERVER_GRPC_MAX_CONNECTIONS=1000
GOCLAW_SERVER_GRPC_MAX_RECV_MSG_SIZE=4194304
GOCLAW_SERVER_GRPC_MAX_SEND_MSG_SIZE=4194304
GOCLAW_SERVER_GRPC_ENABLE_REFLECTION=true
GOCLAW_SERVER_GRPC_ENABLE_HEALTH_CHECK=true

# TLS Configuration
GOCLAW_SERVER_GRPC_TLS_ENABLED=false
GOCLAW_SERVER_GRPC_TLS_CERT_FILE=./certs/server.crt
GOCLAW_SERVER_GRPC_TLS_KEY_FILE=./certs/server.key
GOCLAW_SERVER_GRPC_TLS_CA_FILE=./certs/ca.crt
GOCLAW_SERVER_GRPC_TLS_CLIENT_AUTH=false

# ========================================
# HTTP Configuration
# ========================================
GOCLAW_SERVER_HTTP_READ_TIMEOUT=30s
GOCLAW_SERVER_HTTP_WRITE_TIMEOUT=30s
GOCLAW_SERVER_HTTP_IDLE_TIMEOUT=120s
GOCLAW_SERVER_HTTP_MAX_HEADER_BYTES=1048576

# ========================================
# CORS Configuration
# ========================================
GOCLAW_SERVER_CORS_ENABLED=true
# GOCLAW_SERVER_CORS_ALLOWED_ORIGINS=*,localhost
# GOCLAW_SERVER_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE
# GOCLAW_SERVER_CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ========================================
# Logging Configuration
# ========================================
GOCLAW_LOG_LEVEL=info
GOCLAW_LOG_FORMAT=json
GOCLAW_LOG_OUTPUT=stdout

# ========================================
# Orchestration Configuration
# ========================================
GOCLAW_ORCHESTRATION_MAX_AGENTS=1000
GOCLAW_ORCHESTRATION_QUEUE_TYPE=memory
GOCLAW_ORCHESTRATION_QUEUE_SIZE=10000
GOCLAW_ORCHESTRATION_SCHEDULER_TYPE=round_robin
GOCLAW_ORCHESTRATION_SCHEDULER_CHECK_INTERVAL=5s

# ========================================
# Cluster Configuration (Distributed Mode)
# ========================================
GOCLAW_CLUSTER_ENABLED=false
GOCLAW_CLUSTER_NODE_ID=node-1
GOCLAW_CLUSTER_DISCOVERY_TYPE=consul
GOCLAW_CLUSTER_DISCOVERY_ADDRESS=localhost:8500

# ========================================
# Storage Configuration
# ========================================
GOCLAW_STORAGE_TYPE=memory
GOCLAW_STORAGE_BADGER_PATH=./data/badger
GOCLAW_STORAGE_BADGER_SYNC_WRITES=true
GOCLAW_STORAGE_BADGER_VALUE_LOG_FILE_SIZE=1073741824

# ========================================
# Metrics Configuration
# ========================================
GOCLAW_METRICS_ENABLED=true
GOCLAW_METRICS_PATH=/metrics
GOCLAW_METRICS_PORT=9091

# ========================================
# Tracing Configuration
# ========================================
GOCLAW_TRACING_ENABLED=false
GOCLAW_TRACING_TYPE=jaeger
GOCLAW_TRACING_ENDPOINT=http://localhost:14268/api/traces
GOCLAW_TRACING_SAMPLE_RATE=0.1

# ========================================
# Memory System Configuration
# ========================================
GOCLAW_MEMORY_ENABLED=false
GOCLAW_MEMORY_VECTOR_DIMENSION=768
GOCLAW_MEMORY_VECTOR_WEIGHT=0.7
GOCLAW_MEMORY_BM25_WEIGHT=0.3
GOCLAW_MEMORY_L1_CACHE_SIZE=1000
GOCLAW_MEMORY_FORGET_THRESHOLD=0.1
GOCLAW_MEMORY_DECAY_INTERVAL=1h
GOCLAW_MEMORY_DEFAULT_STABILITY=24.0
GOCLAW_MEMORY_STORAGE_PATH=./data/memory
GOCLAW_MEMORY_BM25_K1=1.5
GOCLAW_MEMORY_BM25_B=0.75
GOCLAW_MEMORY_HNSW_M=16
GOCLAW_MEMORY_HNSW_EF_CONSTRUCTION=200
GOCLAW_MEMORY_HNSW_EF_SEARCH=100

# ========================================
# Redis Configuration (for distributed Lane and Signal Bus)
# ========================================
GOCLAW_REDIS_ENABLED=false
GOCLAW_REDIS_ADDRESS=localhost:6379
# GOCLAW_REDIS_PASSWORD=your_password
GOCLAW_REDIS_DB=0
GOCLAW_REDIS_POOL_SIZE=10
GOCLAW_REDIS_MIN_IDLE_CONNS=2
GOCLAW_REDIS_MAX_RETRIES=3
GOCLAW_REDIS_DIAL_TIMEOUT=5s
GOCLAW_REDIS_READ_TIMEOUT=3s
GOCLAW_REDIS_WRITE_TIMEOUT=3s

# ========================================
# Signal Bus Configuration
# ========================================
GOCLAW_SIGNAL_MODE=local
GOCLAW_SIGNAL_BUFFER_SIZE=16
GOCLAW_SIGNAL_CHANNEL_PREFIX=goclaw:signal: